{
    "name": "zoombar-vscode",
    "displayName": "Zoom Bar",
    "description": "This Visual Studio Code Extension provides zoom UI in status bar.",
    "icon": "images/zoomhex.128.png",
    "version": "0.0.1",
    "publisher": "wraith13",
    "license": "SEE LICENSE IN LICENSE_1_0.txt",
    "engines": {
        "vscode": "^1.5.0"
    },
    "bugs": {
        "url": "https://github.com/wraith13/zoombar-vscode/issues"
    },
    "homepage": "https://github.com/wraith13/zoombar-vscode/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/wraith13/zoombar-vscode.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "zoombar-vscode.selectZoom",
                "title": "Select Zoom",
                "category": "Zoom Bar"
            },
            {
                "command": "zoombar-vscode.resetZoom",
                "title": "Reset Zoom",
                "category": "Zoom Bar"
            },
            {
                "command": "zoombar-vscode.zoomIn",
                "title": "Zoom In",
                "category": "Zoom Bar"
            },
            {
                "command": "zoombar-vscode.zoomOut",
                "title": "Zoom Out",
                "category": "Zoom Bar"
            }
        ],
        "configuration":[
            {
                "title": "Zoom Bar Configuration",
                "properties": {
                    "zoombar.defaultZoom": {
                        "type": "number",
                        "default": 100.0,
                        "description": "default zoom"
                    },
                    "zoombar.zoomUnit": {
                        "type": "number",
                        "default": 10.0,
                        "description": "zoom unit"
                    },
                    "zoombar.zoomPreset": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        },
                        "default": [300.0, 200.0, 150.0, 120.0, 110.0, 100.0, 90.0, 80.0, 75.0, 50.0],
                        "description": "zoom preset"
                    },
                    "zoombar.zoomInLabel": {
                        "type": "string",
                        "default": "+",
                        "description": "zoom in label"
                    },
                    "zoombar.zoomOutLabel": {
                        "type": "string",
                        "default": "-",
                        "description": "zoom out label"
                    },
                    "zoombar.uiDisplayOrder": {
                        "type": "string",
                        "enum": [
                            "",
                            "%",
                            "+-",
                            "-+",
                            "+%-",
                            "+-%",
                            "%+-",
                            "%-+",
                            "-%+",
                            "-+%"
                        ],
                        "default": "+%-"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
    },
    "devDependencies": {
        "typescript": "^2.9.2",
        "vscode": "^1.1.21",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}